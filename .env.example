# AWS Training Certificate System - Environment Variables
# Copy this file to .env and update values for your deployment

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# AWS Deployment Settings (if using AWS services)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Database Settings (if migrating from Excel to database)
# DATABASE_URL=postgresql://user:password@host:port/database

# File Storage (if using AWS S3)
# S3_BUCKET_NAME=your-certificate-bucket
# S3_REGION=us-east-1